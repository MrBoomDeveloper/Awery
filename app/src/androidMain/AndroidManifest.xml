<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission 
        android:name="android.permission.INTERNET" />
    <uses-permission 
        android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- To make installable on TV -->
    <uses-feature 
        android:name="android.hardware.touchscreen" 
        android:required="false" />
    <uses-feature 
        android:name="android.software.leanback" 
        android:required="false" />

    <!-- For managing extensions -->
    <uses-permission 
        android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission 
        android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission 
        android:name="android.permission.UPDATE_PACKAGES_WITHOUT_USER_ACTION" />
    <uses-permission 
        android:name="android.permission.ENFORCE_UPDATE_OWNERSHIP" />
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:name=".app.ApplicationImpl"
        android:label="${APP_NAME}"
        android:icon="@mipmap/ic_launcher"
        android:banner="@mipmap/ic_banner"
        android:localeConfig="@xml/awery_generated_locales_config"
        android:supportsRtl="false"
        android:largeHeap="true"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="33">

        <activity
            android:name=".app.MainActivity"
            android:theme="@style/Theme.Awery.Splash"
            android:windowSoftInputMode="adjustResize"
            android:supportsPictureInPicture="true"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.CrashActivity"
            android:theme="@style/Theme.Material3.DynamicColors.DayNight.NoActionBar"
            android:exported="false" />

        <service
            android:name="androidx.appcompat.app.AppLocalesMetadataHolderService"
            android:enabled="false"
            android:exported="false">

            <meta-data
                android:name="autoStoreLocales"
                android:value="true" />
        </service>

    </application>
</manifest>